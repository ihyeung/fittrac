                <!--<RadioButton-->
                    <!--android:id="@+id/btn_radio_active"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="@string/btn_radio_active"-->
                    <!--android:textSize="14sp" />-->

                <!--<RadioButton-->
                    <!--android:id="@+id/btn_radio_sedentary"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="@string/btn_radio_sedentary"-->
                    <!--android:textSize="14sp" />-->

            <!--</RadioGroup>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/slider_weight_goal"
                app:layout_constraintTop_toBottomOf="@id/txtv_divider_goal"
                app:layout_constraintStart_toEndOf="@id/txtv_lbs_per_week_symbol"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_lose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/slider_weight_goal"
                    android:text="LOSE"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_maintain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/slider_weight_goal"
                    android:text="MAINTAIN"
                    android:layout_weight="1"

                    android:textSize="12sp"

                    app:layout_constraintEnd_toStartOf="@id/tv_gain"
                    app:layout_constraintStart_toEndOf="@id/tv_lose" />

                <TextView
                    android:id="@+id/tv_gain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/slider_weight_goal"
                    android:text="GAIN"
                    android:layout_weight="1"

                    android:textSize="12sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_maintain" />
            </LinearLayout>


            <SeekBar
                android:id="@+id/slider_weight_goal"
                android:max="2"
                android:progress="1"
                android:progressTint="@android:color/transparent"
                android:thumb="@drawable/seekbar_thumb"
                android:tickMark="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txtv_lbs_per_week_symbol"
                app:layout_constraintTop_toBottomOf="@id/txtv_divider_goal" />

            <!--<RadioGroup-->
                <!--android:id="@+id/radiogp_weightGoal"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
