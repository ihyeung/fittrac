<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEntryFrag">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/etxt_fname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/etxt_fname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/btn_img_takeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/etxt_fname" />

    <EditText
        android:id="@+id/etxt_lname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/etxt_lname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/btn_img_takeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_fname"
        tools:text="@string/etxt_lname" />

    <EditText
        android:id="@+id/etxt_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="Age"
        app:layout_constraintEnd_toStartOf="@+id/etxt_sex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_lname"
        tools:text="@string/etxt_age" />

    <EditText
        android:id="@+id/etxt_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sex"
        app:layout_constraintEnd_toStartOf="@+id/btn_img_takeImage"
        app:layout_constraintStart_toEndOf="@+id/etxt_age"
        app:layout_constraintTop_toBottomOf="@+id/etxt_lname"
        tools:text="@string/etxt_sex" />

    <EditText
        android:id="@+id/etxt_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="Height"
        app:layout_constraintEnd_toStartOf="@+id/etxt_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_age"
        tools:text="@string/etxt_height" />

    <EditText
        android:id="@+id/etxt_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/btn_img_takeImage"
        app:layout_constraintStart_toEndOf="@+id/etxt_height"
        app:layout_constraintTop_toBottomOf="@+id/etxt_sex"
        tools:text="@string/etxt_weight" />

    <EditText
        android:id="@+id/etxt_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etxt_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_height"
        tools:text="@string/etxt_city" />

    <EditText
        android:id="@+id/etxt_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/etxt_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_img_takeImage"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_takeImage"
        tools:text="@string/etxt_Country" />

    <ImageButton
        android:id="@+id/btn_img_takeImage"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_profile_img_placeholder"
        app:layout_constraintBottom_toBottomOf="@+id/etxt_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_country"
        tools:text="@string/btn_submit" />

</android.support.constraint.ConstraintLayout>