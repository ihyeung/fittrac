<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <FrameLayout
        android:id="@+id/fl_master_nd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dashboard_button_hiking"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="Find Hikes"
            android:textSize="@dimen/dimen_dashboard_button_text_size"
            android:layout_margin="30dp"
            android:padding="@dimen/dashboard_button_text_padding"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/dashboard_button_weather"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:padding="@dimen/dashboard_button_text_padding"
            android:text="Local Weather"
            android:textSize="@dimen/dimen_dashboard_button_text_size" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>